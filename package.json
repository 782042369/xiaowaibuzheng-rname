{
  "name": "@xiaowaibuzheng/rname",
  "version": "0.0.9",
  "description": "A CLI tool for batch renaming files with Chinese characters to pinyin or English translation",
  "type": "module",
  "bin": {
    "wbzrname": "./dist/index.mjs"
  },
  "scripts": {
    "watch": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint --fix",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version && npm publish && git push --tags",
    "test": "pnpm run build && node ./dist/index.mjs ./test-demo"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/782042369/xiaowaibuzheng-rname.git.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "keywords": [
    "rename",
    "translate",
    "cli",
    "batch-rename",
    "chinese"
  ],
  "author": "waibuzheng",
  "license": "ISC",
  "devDependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@types/node": "^24.10.2",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.1.0",
    "lint-staged": "^16.2.7",
    "standard-version": "^9.5.0",
    "tsdown": "^0.17.2"
  },
  "dependencies": {
    "bing-translate-api": "^4.2.0",
    "camelcase": "^9.0.0"
  }
}
