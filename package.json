{
  "name": "@xiaowaibuzheng/rname",
  "version": "0.0.6",
  "description": "A CLI tool for batch renaming files with Chinese characters to pinyin or English translation",
  "type": "module",
  "bin": {
    "@xiaowaibuzheng/rname": "./dist/index.mjs"
  },
  "scripts": {
    "watch": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint --fix",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version && npm publish && git push --tags"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/782042369/xiaowaibuzheng-rname.git.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "keywords": [
    "rename",
    "translate",
    "cli",
    "batch-rename",
    "chinese"
  ],
  "author": "waibuzheng",
  "license": "ISC",
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "lint-staged": "^16.2.7",
    "standard-version": "^9.5.0",
    "tsdown": "^0.16.7"
  },
  "dependencies": {
    "bing-translate-api": "^4.2.0",
    "es-toolkit": "^1.42.0"
  }
}
